<!DOCTYPE html>
<html>
  <head>
    <title>MyMovies</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header class="border-bottom">
      <nav class="navbar navbar-expand-xl navbar-light">
        <div class="container">
          <%= link_to root_path, class:"link" do %>
            <a class="navbar-brand py-3 px-5 btn btn-light" href="/" >My Movies</a>
          <% end %>
          <% if user_signed_in? %>
          <%= current_user.name %>さん
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>  
          </button>
          <div class="collapse navbar-collapse my-5" id="navbarNavDropdown">

            <% if admin_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item"><%= link_to "MOVIES", admin_movies_path, class: "py-2 px-3 link-header" %></li>
                <li class="nav-item"><%= link_to "GENRES", admin_genres_path, class: "py-2 px-3 link-header" %></li>
                <li class="nav-item"><%= link_to "USERS",  admin_users_path, class: "py-2 px-3 link-header" %></li>
                <li class="nav-item"><%= link_to "LOGOUT", destroy_admin_session_path, method: :delete, class: "py-2 px-3 link-header" %></li>
              </ul>
            <% end %>
            <% if user_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item"><%= link_to "MY PAGE", public_user_mypage_path(current_user), class: "py-2 px-3 link-header" %></li>
                <li class="nav-item"><%= link_to "MOVIES", public_movies_path, class: "py-2 px-3 link-header" %></li>
                <li class="nav-item"><%= link_to "LOGOUT", destroy_user_session_path, method: :delete, class: "py-2 px-3 link-header" %></li>
              </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item"><%= link_to "LOG IN", user_session_path, class: "py-2 px-3 link-header" %></li>
                <li class="nav-item"><%= link_to "SIGN IN", new_user_registration_path, class: "py-2 px-3 link-header" %></li>
              </ul>
            <% end %>
          </div>
          
        </div>
      </nav>
      
    </header>
    <%= yield %>
  </body>
</html>

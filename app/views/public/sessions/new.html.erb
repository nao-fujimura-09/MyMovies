<div class="container">
  <div class="row">
    <div class="col-4"></div>
    <div class="col-md-4 col-sm-12">
      <h2 class="mt-5 mb-3 text-center title">ログイン</h2>

      <%= form_with model:@user, url: user_session_path, method: :POST do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td nowrap>メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %></td>
            </tr>
            
            <tr>
              <td>パスワード</td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
          </tbody>
        </table>

        <div class="bg-#d2b48c mb-5" align="center">
         <%= f.submit "LOG IN", class: "button btn px-2" %> 
        </div>
      <% end %>
  
      登録がまだな方<br>
      <div class="form-inline d-flex align-items-center">
        <%= render "public/shared/links" %>からご登録をお願いいたします。
      </div>
    </div>
    
    <div class="col-4"></div>
  </div>
</div>
<div class="containeer">
  <h2 class="mt-5 text-center mb-5">作品一覧</h2>
    <ul class=" movies d-flex flex-wrap row-gap">
      <% @movies.each do |movie| %>
      <li class="d-flex flex-column justify-content-between">
        <div class="mb-3"><%= image_tag "https://image.tmdb.org/t/p/w154/#{movie.poster_path}", class:"mx-5 mb-2" %></div>
        <div>
          <h3 class="movies text-center"><%= movie.title.truncate(14) %></h3>
          
          <div class="text-center">
          <i class="fa fa-regular fa-star"></i><i class="fa fa-regular fa-star"></i><i class="fa fa-regular fa-star"></i><i class="fa fa-regular fa-star"></i><i class="fa fa-regular fa-star"></i>
          
          <%# if @watch_list.present? %>
            <%#= link_to public_watch_list_path(@watch_list.id), method: :delete do %>
            <!--<P>削除</P>-->
            <%# end %>
          <%# else %>
          <%= form_with model: @watch_list, url: public_watch_lists_path, method: :post do |f| %>
          <%= f.hidden_field :movie_id, :value => movie.id %>
          <div class="form-inline">
            <div class="list-in">LIST IN　
              <%= button_tag type: 'submit', class: "btn" do %>
                <i class="fa fa-solid fa-plus fa-xs", style="color:#f5f5f5;"></i>
              <% end %>
            </div>
            </div>
          <div class="form-inline">
            <div class="watched">WATCHED
              <%= button_tag type: 'submit', class: "btn" do %>
                <i class="fa fa-solid fa-eye fa-xs", style="color:#f5f5f5;"></i>
              <%# end %>
            <% end %>
            </div>
          </div>
          
          
  
          <% end %>
          
          <p class="mx-5"><i class="fa fa-solid fa-eye"></i> <i class="fa fa-regular fa-eye"></i></p>
        </div>
        </div>
      </li>
      <% end %>
    </ul>
</div>


<a href="" class="btn btn-tag btn-tag--favorite"><i class="fas fa fa-solid fa-plus fa-xs"></i>LIST IN</a>

<style>
  body {
  background: #f5f5f5;
  font-family:  "Hiragino Sans","ヒラギノ角ゴ ProN W3","Hiragino Kaku Gothic Pro",Osaka,"メイリオ",Meiryo,"ＭＳ Ｐゴシック","MS P Gothic",Verdana,sans-serif;
  }
  
  .list-in btn {  
  width: 30px;
  height: 30px;
  /*background-color: #A5805B;*/
  background-color: #a68b62;
  border-radius: 5px;
}

.list-in {
  background-color: #a68b62;
  height: 30px;
  weight: 30px;
  position: absolute;
  border-radius: 5px;
  padding-left: 15px;
  margin-top: 30px;
  color: #f5f5f5;
}

</style>




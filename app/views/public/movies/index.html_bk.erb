<div class="containeer">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-9">
      <h2 class="mt-5">作品一覧</h2>
        <table class="user-movie_table table-boderless mt-5">
        <tbody>
            <tr class="table-cell">
              <% @movies.each do |movie| %>
                <td>
                  <%= image_tag "https://image.tmdb.org/t/p/w154/#{movie.poster_path}", class:"mx-5 mb-2" %>
                  <strong class="mx-5"><%= movie.title %></strong></br>
                <p class="mx-5">閲覧｜リストへ追加<%= link_to "＋", public_watch_lists_path, method: :post %></p>
                </td>
                <% end %>
            </tr>
        </tbody>
      </table>
     <div class="col-2"></div>
        
  </div>
</div>
</div>

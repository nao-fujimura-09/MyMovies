<div class="container">
  <div class="row mt-5">
    <%= render 'user_list', user: @user %>
 
    <div class="col-9">
      <h2>映画閲覧数 <%= @user.views.count %> 本</h2>
      
      <ul class=" movies d-flex flex-wrap row-gap">
        <% @views.each do |view| %>
          <% movie = Tmdb::Movie.detail(view.movie_id) %>
          <!--<%# review = current_user.reviews.where(movie_id: review.movie_id) %>-->
          <li class="d-flex flex-column justify-content-between mt-5">
            <div class="mb-3 mx-5"><%= image_tag "https://image.tmdb.org/t/p/w154/#{movie.poster_path}" %></div>
            <%= link_to public_movie_path(id: movie.id) do %>
              <h3 class=" movies text-center"><%= movie.title %></h3>
            <% end %>
            <div class="form-inline">
              <p>ユーザーの評価を表示したい</p>
              <div id="star_review_<%= @review.id %>"></div> 
            </div>
            
            <!--<%# unless @review.nil? %> -->
            <!--<div id="star_review_<%#= @review.id %>"></div> -->
                <script>
                  $('#star_review_<%= @review.id %>').empty();
                  $('#star_review_<%= @review.id %>').raty({
                    size: 70,
                    starOn : '<%= asset_path('star-on.png') %>',
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    scoreName: "review[star]",
                    half: true, 
                    readOnly: true,
                    score: <%= @review.star %>,
                  });
                </script>
            <% #end %>
            
          </li>
          <% end %>
        </ul>
    </div>

  </div>
</div>